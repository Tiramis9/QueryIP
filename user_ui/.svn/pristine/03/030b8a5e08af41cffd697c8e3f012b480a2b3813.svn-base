func TestPlayerRegister(t *testing.T) {
	gamePlay := GameImone{
		Host:         AGENTURLAPI,
		Key:          MERCHANTCODE,
		AgentName:    AgentName,
		ResellerName: RESELLERNAME,
	}
	m := make(map[string]interface{})
	m["PlayerId"] = "myPlayerId"
	m["Password"] = "mypassword123"
	m["Currency"] = "CNY"
	m["Country"] = "CN"
	m["Sex"] = "F"
	m["BirthDate"] = "19701128"

	g, _ := game.NewGame("imone")
	resp, err := g.Register(m) //test注册
	if err != nil {
		t.Fatal(err)
	}
	t.Logf("%#v", resp)

	pre := g.GetPrefix()
	t.Logf("%#v", pre)

	res, err := gamePlay.GetExistsPlayer(m)
	if err != nil {
		t.Fatal(err)
	}
	t.Logf("%#v", res)

	res, err = gamePlay.ResetPassword(m)
	if err != nil {
		t.Fatal(err)
	}
	t.Logf("%#v", res)

