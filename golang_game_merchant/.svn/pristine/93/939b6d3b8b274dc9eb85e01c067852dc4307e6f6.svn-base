package status

import "fmt"

const (
	OK             = 200
	ErrParamError  = 400
	ErrNotFound    = 404
	ErrServerError = 500
)

var statusDesc = map[int]string{
	OK:             "成功",
	ErrParamError:  "参数错误",
	ErrNotFound:    "请求找不到",
	ErrServerError: "服务器错误",
}

func Description(code int) string {
	if msg, ok := statusDesc[code]; ok {
		return msg
	}

	return fmt.Sprintf("未知错误：%v", code)
}
