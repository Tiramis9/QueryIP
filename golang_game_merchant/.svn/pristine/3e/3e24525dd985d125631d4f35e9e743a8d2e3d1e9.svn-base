package model

import (
	"testing"
	"time"
)

func TestGetMessageList(t *testing.T) {
	db := connectDb()
	defer db.Close()

	list, err := GetMessageList(db, 1, 1, 10)
	if err != nil {
		t.Fatal(err)
	}

	for _, m := range list {
		t.Logf("%#v", m)
	}
}

func TestGetMessageCount(t *testing.T) {
	db := connectDb()
	defer db.Close()

	count, err := GetMessageCount(db, 1)
	if err != nil {
		t.Fatal(err)
	}

	t.Log(count)
}

func TestReadMessage(t *testing.T) {
	db := connectDb()
	defer db.Close()

	flag, err := ReadMessage(db, 6, time.Now().Unix())
	if err != nil {
		t.Fatal(err)
	}

	t.Log(flag)
}
