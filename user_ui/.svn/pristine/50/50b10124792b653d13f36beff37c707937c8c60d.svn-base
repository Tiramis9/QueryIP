	txId := GameMGParentId

	//base64加密
	paramStrEncode := base64.StdEncoding.EncodeToString([]byte(GameMGAuth + ":" + GameMGAuthSecret))
	auth := "Basic " + paramStrEncode
	//auth := paramStrEncode

