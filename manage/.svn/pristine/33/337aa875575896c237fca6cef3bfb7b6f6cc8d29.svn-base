/**
编辑代理报表信息
*/
func (abr AgentBrokerageReport) UpdateAgentBrokerageReport(db *gorm.DB, merchId int, fields map[string]interface{}) (bool, error) {
	if err := db.Model(&abr).Where("merchant_id=?", merchId).Updates(fields).Error; err != nil {
		logrus.Error(err)
		return false, err
	}
	return true, nil
}
