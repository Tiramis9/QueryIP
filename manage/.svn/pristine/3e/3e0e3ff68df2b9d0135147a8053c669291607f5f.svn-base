func TestGetUserList(t *testing.T) {
	db := connectDb()
	defer db.Close()
	m := make(map[string]interface{})
	m["status"] = 1
	res, count, err := GetUserList(db, 1, 1, 5, m)
	if err != nil {
		t.Fatal(err)
	}
	t.Log(count)
	for _, m := range res {
		t.Logf("%#v", m)
	}
}

