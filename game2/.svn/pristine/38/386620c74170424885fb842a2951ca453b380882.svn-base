package crontab

import (
	"github.com/robfig/cron"
	"github.com/sirupsen/logrus"
)

const (
	GameTypeAgin = "agin"
	GameTypeDg   = "dg"
	GameTypeKy   = "ky"
)

var (
	GameList = []string{
		GameTypeAgin,
		GameTypeDg,
		GameTypeKy,
	}

	// 定时任务执行间隔
	GameSepc = map[string]string{
		GameTypeAgin: "* */5 * * *", //每5分钟执行一次
		GameTypeDg:   "* */3 * * *", //每3分钟执行一次
		GameTypeKy:   "* */1 * * *", //每1分钟执行一次
	}
)

func CrontabInit() {
	crontab := cron.New()
	for _, game := range GameList {
		f := func() {
			defer func() {
				if err := recover(); err != nil {
					logrus.Error(err)
					return
				}
			}()

			task, _ := NewGame(game)
			director.Execute(task)
		}

		if err := crontab.AddFunc(GameSepc[game], f); err != nil {
			panic(err)
		}
	}
	crontab.Start()
}
