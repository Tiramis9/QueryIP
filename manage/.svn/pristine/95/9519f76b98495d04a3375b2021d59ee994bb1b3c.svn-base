func TestGetMemberBill(t *testing.T) {
	db := connectDb()
	defer db.Close()

	m := make(map[string]interface{})
	m["user_type"] = 1
	m["type"] = 1
	m["code"] = 100
	m["end_time"] = 1542003391
	m["user_name"] = "liu"
	merchantId := 0
	list, count, err := GetMemberBillList(db, merchantId, 1, 10, m)
	if err != nil {
		t.Fatal(err)
	}

	t.Log(count)
	for i := range list {
		t.Logf("%#v", list[i])
	}
}

