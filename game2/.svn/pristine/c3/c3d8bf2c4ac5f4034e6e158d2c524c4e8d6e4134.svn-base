package crontab

import (
	"testing"
	"github.com/robfig/cron"
	"fmt"
)

func TestCrontabSpec(t *testing.T) {
	crontab := cron.New()
	f := func() {
		fmt.Println("crontab task...")
	}
	schedule, err := cron.ParseStandard("* */1 * * *")
	if err != nil {
		t.Fatal(err)
	}
	crontab.Schedule(schedule, cron.FuncJob(f))
	crontab.Start()
	select {}
}
