func (in SysMessage) MessageUserAddInfo(db *gorm.DB, msgMerchId map[int]int) error {
	if err := db.Debug().Create(&in).Error; err != nil {
		return err
	}
	var time Message
	if err := db.Debug().Table("sys_message").Select("id").Where("content=? AND title=? AND to_user=?",
