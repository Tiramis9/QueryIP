package action

import (
	"github.com/gin-gonic/gin"
	"github.com/sirupsen/logrus"
	"golang_game_merchant/global/status"
	"golang_game_merchant/model"
)

//merchant_admin的user_name和status查询
type employeeReq struct {
	QE    model.QueryEmployee
	Token int `json:"token"`
}

func QueryEmployeeInfo(c *gin.Context) {
	var req employeeReq
	if err := c.Bind(&req); err != nil {
		logrus.Errorf("c.Bind(),%v", err)
		RespParamErr(c)
		return
	}

	merchantID := 1
	resp, err := model.QueryEmployeeInfo(model.Db, &(req.QE), merchantID)
	if err != nil {
		logrus.Errorf("model.QueryEmployeeInfo(), %v\n", err)
		RespServerErr(c)
		return
	}

	RespJson(c, status.OK, resp)
}
