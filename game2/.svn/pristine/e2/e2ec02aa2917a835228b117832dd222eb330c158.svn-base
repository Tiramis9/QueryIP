package ky

import (
	"fmt"
	"time"
)

type Server struct {
	//服务器协议，http/https
	ServerSchema string

	//服务器地址，api.ky34.com
	ServerAddress string
}

// 开元棋牌
type GameKY struct {
	Server

	Agent  string
	DesKey string
	Md5Key string
}

type BaseReq struct {
	Agent     string
	TimeStamp int64 //毫秒
	Param     string
	Key       string
}

